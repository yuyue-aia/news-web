<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>AI News Everyday - 新闻中心</title>
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap-icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Custom Styles -->
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- ===== 顶部导航 ===== -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">AI News Everyday</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/">首页</a></li>
                    <li class="nav-item"><a class="nav-link" href="/api/news">API</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- ===== 主内容区 ===== -->
    <main class="container my-4">
        <h1 class="timeline-title">AI News Everyday</h1>

        <% if (newsGroupedByDate && newsGroupedByDate.length > 0) { %>
            <!-- 时间轴容器 -->
            <div class="timeline-container">
                <!-- 时间轴主线 -->
                <div class="timeline-line"></div>
                
                <!-- 新闻时间轴 -->
                <div id="news-timeline">
                    <% newsGroupedByDate.forEach(function(dateGroup) { %>
                        <div class="date-group">
                            <!-- 日期标签和点 -->
                            <div class="date-label"><%= dateGroup.date %></div>
                            <div class="date-dot"></div>
                            
                            <!-- 当天的新闻列表 -->
                            <div class="news-list">
                                <% dateGroup.articles.forEach(function(article) { %>
                                    <div class="timeline-news-item loaded">
                                        <div class="timeline-news-card" data-news-id="<%= article._id %>">
                                            <!-- 一行布局：公司名称、分类、标题、链接 -->
                                            <div class="timeline-news-content">
                                                <span class="company-tag"><%= article.author || 'Unknown' %></span>
                                                <span class="category-tag"><%= article.blog_type %></span>
                                                <div class="timeline-news-title" onclick="toggleAISummary('<%= article._id %>')">
                                                    <%= article.title %>
                                                </div>
                                                <div class="link-area">
                                                    <% if (article.article_link) { %>
                                                        <a href="<%= article.article_link %>" 
                                                           target="_blank" 
                                                           class="text-decoration-none"
                                                           title="查看原文"
                                                           style="color: #1a73e8; font-size: 0.75rem;">
                                                            <i class="bi bi-box-arrow-up-right"></i>
                                                        </a>
                                                    <% } %>
                                                </div>
                                            </div>
                                            
                                            <!-- AI摘要区域 -->
                                            <% if (article.ai_summary) { %>
                                                <div id="summary-<%= article._id %>" class="ai-summary-section">
                                                    <div class="ai-summary-header">
                                                        <i class="bi bi-stars"></i>
                                                        AI 摘要
                                                    </div>
                                                    <div class="ai-summary-content">
                                                        <%= article.ai_summary %>
                                                    </div>
                                                </div>
                                            <% } %>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>

            <!-- 加载更多按钮 -->
            <% if (hasMore) { %>
                <div class="load-more-section">
                    <button id="load-more-btn" class="btn">
                        <i class="bi bi-arrow-down-circle me-2"></i>加载更多
                    </button>
                </div>
            <% } %>
            
            <!-- 加载中指示器 -->
            <div id="loading-indicator" class="text-center mt-4" style="display: none;">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">加载中...</span>
                </div>
                <p class="mt-2 text-muted">正在加载更多新闻...</p>
            </div>
            
            <!-- 加载完成指示器 -->
            <div id="end-indicator" class="text-center mt-4" style="display: none;">
                <p class="text-muted">
                    <i class="bi bi-check-circle me-2"></i>已加载全部 <%= totalNews %> 条新闻
                </p>
            </div>
        <% } else { %>
            <div class="empty-state">
                <i class="bi bi-newspaper"></i>
                <h4 class="mt-3">暂无新闻</h4>
                <p class="text-muted">目前还没有新闻内容，请稍后再来查看。</p>
            </div>
        <% } %>
    </main>

    <!-- ===== 页脚 ===== -->
    <footer class="bg-light py-4 mt-5">
        <div class="container text-center">
            <p class="text-muted mb-0">&copy; 2025 AI News Everyday. All rights reserved.</p>
        </div>
    </footer>

    <!-- ===== 依赖脚本 ===== -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Feed流状态初始化 -->
    <script>
        // 初始化Feed流状态 - 计算已加载的新闻数量
        let totalLoadedNews = 0;
        <% if (newsGroupedByDate) { %>
            <% newsGroupedByDate.forEach(function(dateGroup) { %>
                totalLoadedNews += <%= dateGroup.articles.length %>;
            <% }); %>
        <% } %>
        
        window.feedState = {
            currentOffset: totalLoadedNews,
            hasMore: <%= hasMore ? 'true' : 'false' %>,
            loading: false,
            limit: 10
        };
    </script>
    
    <script src="/js/main.js"></script>
</body>
</html>