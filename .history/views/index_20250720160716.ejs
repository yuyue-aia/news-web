<% 
var bodyContent = `
<div class="row">
    <div class="col-12">
        <h1 class="mb-4">最新新闻</h1>
        
        <% if (news && news.length > 0) { %>
            <div class="row">
                <% news.forEach(function(article) { %>
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="/news/<%= article._id %>" class="text-decoration-none">
                                        <%= article.title %>
                                    </a>
                                </h5>
                                <p class="card-text text-muted small">
                                    <span class="badge bg-secondary me-2"><%= article.blog_type %></span>
                                    作者: <%= article.author %>
                                </p>
                                <p class="card-text">
                                    <%= article.ai_summary ? article.ai_summary.substring(0, 150) + '...' : '暂无摘要' %>
                                </p>
                                <div class="card-footer bg-transparent">
                                    <small class="text-muted">
                                        发布时间: <%= moment(article.publish_date).format('YYYY-MM-DD HH:mm') %>
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
            
            <!-- 分页导航 -->
            <% if (totalPages > 1) { %>
                <nav aria-label="新闻分页">
                    <ul class="pagination justify-content-center">
                        <% if (currentPage > 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="/?page=<%= currentPage - 1 %>">上一页</a>
                            </li>
                        <% } %>
                        
                        <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
                            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                <a class="page-link" href="/?page=<%= i %>"><%= i %></a>
                            </li>
                        <% } %>
                        
                        <% if (currentPage < totalPages) { %>
                            <li class="page-item">
                                <a class="page-link" href="/?page=<%= currentPage + 1 %>">下一页</a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            <% } %>
        <% } else { %>
            <div class="alert alert-info">
                <h4>暂无新闻</h4>
                <p>目前还没有新闻内容，请稍后再来查看。</p>
            </div>
        <% } %>
    </div>
</div>
` }) %>